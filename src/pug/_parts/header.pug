header.header-common.is-ready
  .promotion-header
    .wrapper
      .information-promotion
        .text-promotion Sign up and get 20% off to your first order. <a class="trans" href="#">Sign Up Now</a>
        .button-promotion.md
          img.image-common(src=imgCommonPC+"icn_close.svg" height="20" width="20" alt="Close" loading="eager")
  .wrapper
    .header-viewport
      a.logo-header.trans(href=path+"/")
        img.image-common.md(src=imgCommonPC+"logo_header.svg" height="160" width="22" alt="SHOP.CO" loading="eager")
        img.image-common.sm(src=imgCommonSP+"logo_header.svg" height="126" width="18" alt="SHOP.CO" loading="eager")
      nav.navigation-header
        .navigation-wrapper
          .list-header-menu
            ul.list-wrapper
              li.item-list.has-child
                a.link-list.trans(href="#") Shop
              li.item-list
                a.link-list.trans(href="#") On Sale
              li.item-list
                a.link-list.trans(href="#") New Arrivals
              li.item-list
                a.link-list.trans(href="#") Brands
      .form-header-search
        form.form-wrapper(action="#")
          .button-search
            button.button-wrapper(type="submit" name="submit")
              .icon-search
                img.image-common(src=imgCommonPC+"icn_search.svg" height="24" width="24" alt="Search" loading="eager")
          .input-search
            input.input-wrapper(type="text" name="keySearch" placeholder="Search for products...")
      .list-header-action
        ul.list-wrapper
          li.item-list
            a.icon-list.trans(href="#")
              img.image-common.md(src=imgCommonPC+"icn_cart.svg" height="24" width="24" alt="Cart" loading="eager")
          li.item-list
            a.icon-list.trans(href="#")
              img.image-common.md(src=imgCommonPC+"icn_user.svg" height="24" width="24" alt="User" loading="eager")